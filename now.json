{
  "version": 2,
  "name": "boost-storage",
  "builds": [
    { 
      "src": "api/storages.ts",
      "use": "@now/node",
      "config": { "helpers": false }
    },
    { "src": "api/create.ts", "use": "@now/node" }
  ],
  "routes": [{ 
      "src": "/api/users/(?<boostId>[^/]+)/storages/(?<storageId>[^/]+)[/db]?(?<route>.*)",
      "dest": "/api/storages.ts"
    },{
      "src": "/api/users/(?<boostId>[^/]+)/storages",
      "methods": ["POST"],
      "dest": "api/create.ts?boostId=$boostId"
    },{
      "src": ".*",
      "status": 404
  }]
}
