{
  "version": 2,
  "builds": [
    { "src": "api/db.ts", "use": "@now/node", "config": { "helpers": false } },
    { "src": "api/create.ts", "use": "@now/node" },
    { "src": "public/*", "use": "@now/static" }
  ],
  "routes": [
    { 
      "src": "/api/users/(?<boostId>[^/]+)/storages/(?<repoId>[^/]+)/db(.*)",
      "dest": "/api/db.ts?boostId=$boostId&repoId=$repoId"
    },
    {
      "src": "/api/users/(?<boostId>[^/]+)/storages",
      "methods": ["POST"],
      "dest": "api/create.ts?boostId=$boostId"
    },
    {
      "src": "(.*)",
      "dest": "public/index.html"
    }
  ]
}
